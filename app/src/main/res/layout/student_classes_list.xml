<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp">

        <RelativeLayout
            android:id="@+id/SingleStudentClassList_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:padding="8dp">

            <ImageView
                android:id="@+id/SingleStudentClassList_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_names"
                android:tint="@color/Grey_background"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SingleStudentClassList_classname"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="4dp"
                android:text="Class name"
                android:fontFamily="@font/nunito_extralight"
                android:textColor="@color/LoginOrange"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/SingleStudentClassList_logo"
                />

            <TextView
                android:id="@+id/SingleStudentClassList_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/nunito_extralight"
                android:text="Description"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@+id/SingleStudentClassList_classname"
                android:layout_toEndOf="@+id/SingleStudentClassList_logo"
                />

            <TextView
                android:id="@+id/SingleStudentClassList_classcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="code"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_extralight"
                android:layout_below="@+id/SingleStudentClassList_desc"
                android:layout_toEndOf="@+id/SingleStudentClassList_logo"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>