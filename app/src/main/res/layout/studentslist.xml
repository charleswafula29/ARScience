<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp">

        <RelativeLayout
            android:id="@+id/SingleStudent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/unit_list_background"
            android:padding="8dp">

            <ImageView
                android:id="@+id/SingleStudent_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_names"
                android:tint="@color/Grey_background"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SingleStudent_name"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="4dp"
                android:text="Student name"
                android:fontFamily="@font/nunito_extralight"
                android:textColor="@color/Orange"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/SingleStudent_logo"
                />

            <TextView
                android:id="@+id/SingleStudent_admissionNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/nunito_extralight"
                android:text="Admission number"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_below="@+id/SingleStudent_name"
                android:layout_toRightOf="@+id/SingleStudent_logo"
                />

            <TextView
                android:id="@+id/SingleStudent_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="status"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="italic"
                android:fontFamily="@font/nunito_extralight"
                android:layout_below="@+id/SingleStudent_admissionNo"
                android:layout_toRightOf="@+id/SingleStudent_logo"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>